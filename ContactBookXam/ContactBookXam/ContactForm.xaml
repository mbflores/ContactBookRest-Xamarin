<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactBookXam.ContactForm">
    <StackLayout>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection>
                    <EntryCell Text="{Binding FirstName}" Placeholder="..Entry FirstName" x:Name="EntryFirst" />
                    
                    <EntryCell Text="{Binding LastName}" Placeholder="..Entry FirstName" x:Name="EntryLast" />
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Save" x:Name="BtnSave"/>

    </StackLayout>
</ContentPage>